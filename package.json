{
  "name": "@oma3/omatrust",
  "version": "0.1.0-alpha.1",
  "description": "Framework-agnostic TypeScript SDK for OMATrust",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./identity": {
      "types": {
        "import": "./dist/identity/index.d.ts",
        "require": "./dist/identity/index.d.cts"
      },
      "import": "./dist/identity/index.js",
      "require": "./dist/identity/index.cjs"
    },
    "./reputation": {
      "types": {
        "import": "./dist/reputation/index.d.ts",
        "require": "./dist/reputation/index.d.cts"
      },
      "import": "./dist/reputation/index.js",
      "require": "./dist/reputation/index.cjs"
    },
    "./app-registry": {
      "types": {
        "import": "./dist/app-registry/index.d.ts",
        "require": "./dist/app-registry/index.d.cts"
      },
      "import": "./dist/app-registry/index.js",
      "require": "./dist/app-registry/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "canonicalize": "^2.1.0"
  },
  "peerDependencies": {
    "@ethereum-attestation-service/eas-sdk": "^2.4.0",
    "ethers": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "@ethereum-attestation-service/eas-sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ethereum-attestation-service/eas-sdk": "^2.9.0",
    "@types/node": "^22.10.2",
    "ethers": "^6.16.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
